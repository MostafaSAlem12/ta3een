<%- include('../partials/navbar',user)%>
    <form class="mt-5 d-flex justify-content-center" action="/fresh/edit?_method=PATCH" method="post">
        <div class="w-50">
            <div class="p-4 m-5 card">
                <h3 class="mb-5 text-center">(تعيين طازج) تعديل صنف</h3>


                <div class="form-group form-floating mb-3">
                    <select class="form-select" name="id" id="id" required>
                        <option value="" hidden>اسم الصنف</option>
                        <% for(let category of categories) {%>
                            <option value="<%=JSON.stringify(category)%>"><%=category.name%></option>
                        <%}%>
                    </select>
                    <label for="id">اسم الصنف</label>
                </div>

                <div class="form-group form-floating mb-3">
                    <input type="text" id="newName" class="form-control"  name="newName" placeholder="اسم الصنف الجديد">
                    <label for="newName">اسم الصنف الجديد</label>
                </div>

                <div class="form-group form-floating mb-3">
                    <input type="number" class="form-control" min="0.001" step="0.001" id="rate"  name="rate" placeholder="صرفية الفرد">
                    <label for="rate">صرفية الفرد</label>
                </div>

                <div class="form-group form-floating mb-3">
                    <select class="form-select" name="unit" id="unit" required disabled>
                        <option value="" hidden>الوحدة</option>
                        <% for(let unit of units) {%>
                            <option value="<%=unit%>"><%=unit%></option>
                            <%}%>
                    </select>
                    <label for="unit">الوحدة</label>
                </div>    
                <div class="d-flex justify-content-center mb-3">
                    <div class="form-check mx-5">
                        <input class="form-check-input" type="checkbox" value="الفطار" id="breakFast" name="breakFast">
                        <label class="form-check-label" for="breakFast">
                            الفطار
                        </label>
                    </div>
                    <div class="form-check mx-5">
                        <input class="form-check-input" type="checkbox" value="الغداء" id="lunch" name="lunch">
                        <label class="form-check-label" for="lunch">
                            الغداء
                        </label>
                    </div>
                    <div class="form-check mx-5">
                        <input class="form-check-input" type="checkbox" value="العشاء" id="dinner" name="dinner">
                        <label class="form-check-label" for="dinner">
                            العشاء
                        </label>
                    </div>
                </div>  
                <div class="form-group form-floating mb-3" hidden>
                    <input type="text" class="form-control"  name="type" hidden value="جاف">
                </div>
                
                <!-- <div class="form-group form-floating mb-3">
                    <input type="file" class="form-control" name="image" id="image" placeholder="image"
                        >
                    <label for="image">صورة للجهاز</label>
                </div> -->
                <button type="submit" class="btn btn-primary" id="submitBtn"><i class="bi bi-pen-fill"></i> تعديل</button>
            </div>
        </div>
    </form>
    </body>

    <script src="../../public/js/jquery.js"></script>
    <script src="../../public/js/editCategory.js"></script>
    <script src="../../public/js/mealCheckBoxes.js"></script>
