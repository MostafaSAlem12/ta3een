<%- include('./partials/navbar',user)%> 
    <div class="w-75 text-center container mt-5">
<%if (categories.length > 0) {%>
        <h2 class="text-center mb-5">نتائج البحث</h2>
<table
  class="table table-responsive table-hover table-bordered mx-auto bg-white rounded shadow text-center"
>
  <thead class="table-primary">
    <tr class="text-center">
      <th>اسم الصنف</th>
      <th>نوع الصنف</th>
      <th>الكمية</th>
      <th>تاريخ الدخول</th>
    </tr>
  </thead>
  <tbody>
    <% for (let category of categories) {%>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.type %></td>
      <td><%= category.amount %> كيلو</td>
      <td><%= moment(new Date(category.createdAt)).format('DD-MM-YYYY') %></td>
    </tr>
    <% } %>
  </tbody>
</table>
<%if (count> limit) {%>
<nav aria-label="Page navigation example" class="justify-content-center d-flex">
  <ul class="pagination">
    <%if (page> 1) {%>
    <li class="page-item">
      <a
        class="page-link"
        href="?page=<%=parseInt(page)-1%><%if (q) {%>&q=<%=q%> <%}%>"
        >السابق</a
      >
    </li>
    <%}%> <%for (let i=0; i < parseInt(pagesCount); i++) {%>
    <li
      class="<%if (parseInt(page) === i+1) {%> page-item active <%}else {%> page-item <%}%>>"
    >
      <a
        class="page-link"
        href="<%if (parseInt(page) === i+1) {%>#<%}else {%>?page=<%=i+1%><%if (q) {%>&q=<%=q%> <%}%> <%}%>"
      >
        <%=i+1%>
      </a>
    </li>
    <%}%> <%if (page < parseInt(pagesCount)) {%>
    <li class="page-item">
      <a
        class="page-link"
        href="?page=<%=parseInt(page)+1%><%if (q) {%>&q=<%=q%> <%}%>"
        >التالي</a
      >
    </li>
    <%}%>
  </ul>
</nav>
<%}%> <%} else {%>

<div class="card text-center mb-3">
  <h3 class="text-muted card-body">لا يوجد بيانات</h3>
</div>
<%}%>
</div>
</html>
