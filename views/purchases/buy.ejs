<%- include('../partials/navbar',user)%>
    <form class="mt-5 d-flex justify-content-center" action="/purchases/buy" method="post">
        <div class="w-50">
            <div class="p-4 m-5 card">
                <h3 class="mb-5 text-center">شراء</h3>

                <div class="form-group form-floating mb-3">
                    <input type="date" id="date" class="form-control"  name="date" placeholder="تاريخ الشراء" required>
                    <label for="date">تاريخ الشراء</label>
                </div>

                <div class="form-group form-floating mb-3">
                    <select class="form-select" name="name" id="name" required>
                        <option value="" hidden>اسم الصنف</option>
                        <% for(let purchase of purchases) {%>
                            <option value="<%=purchase.name%>"><%=purchase.name%></option>
                            <%}%>
                    </select>
                    <label for="name">اسم الصنف</label>
                </div>

                <div class="form-group form-floating mb-3">
                    <input type="number" min="0.25" step="0.25" id="amount" class="form-control"  name="amount" placeholder="الكمية بالكيلو" required>
                    <label for="amount">الكمية بالكيلو</label>
                </div>

                
                <!-- <div class="form-group form-floating mb-3">
                    <input type="file" class="form-control" name="image" id="image" placeholder="image"
                        >
                    <label for="image">صورة للجهاز</label>
                </div> -->
                <button type="submit" class="btn btn-primary">شراء</button>
            </div>
        </div>
    </form>
    </body>

    </html>