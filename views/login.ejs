  <body style="height: 100%; background-color: antiquewhite" dir="rtl">
    <div class="container w-100 text-center mt-2 py-5">
      <img src="/public/images/logo.png" alt="" width="150" />
      <h3>منظومة مخازن التعيينات</h3>
      <form
        class="mt-5 d-flex justify-content-center needs-validation"
        action="/login"
        method="post"
        novalidate
      >
        <div class="w-50">
          <div class="p-4 card d-flex">
            <h3 class="mb-5 text-center">تسجيل الدخول</h3>
            <%if (messages) {%> <%for(let message of messages) {%>
            <div class="alert alert-danger" role="alert">
              <h5><%=message%></h5>
            </div>
            <%}%> <%}%>
            <div class="form-group form-floating mb-3">
              <input type="text" class="form-control" id="name" name="name"
              placeholder="اسم المستخدم" required" />
              <label for="name">اسم المستخدم</label>
              <div class="invalid-feedback text-start">اكتب اسم المستخدم</div>
            </div>
            <div class="form-group form-floating mb-3">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="كلمة المرور"
                required
                onselectstart="return false"
                onpaste="return false"
                onCopy="return false"
                onCut="return false"
                onDrag="return false"
                onDrop="return false"
                autocomplete="off"
              />
              <label for="password">كلمة المرور</label>
              <div class="invalid-feedback text-start">اكتب كلمة المرور</div>
            </div>
            <div class="form-check mb-3 text-start">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="togglePassword"
              />
              <label class="form-check-label" for="togglePassword">
                إظهار كلمة المرور
              </label>
            </div>
            <!-- <div class="form-group form-floating mb-3">
                    <input type="file" class="form-control" name="image" id="image" placeholder="image"
                        >
                    <label for="image">صورة للجهاز</label>
                </div> -->
            <button type="submit" class="btn btn-primary">تسجيل</button>
            <div class="mt-3">
              <a href="/signup" class="text-decoration-none btn btn-link"
                >اذا لم يكن لديك حساب يمكنك إنشاء حساب جديد</a
              >
            </div>
          </div>
        </div>
      </form>
    </div>
    <script src="../public/js/login.js"></script>
  </body>
</html>
